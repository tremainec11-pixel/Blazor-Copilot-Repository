function renderEventCard(event) {
  const card = document.createElement("article");
  card.className = "event-card";

  card.innerHTML = `
    <h3>${event.name}</h3>
    <p>ğŸ“… ${new Date(event.date).toLocaleDateString()}</p>
    <p>ğŸ“ ${event.location}</p>
    <div class="event-actions">
      <button class="view-btn">View Details</button>
      <button class="register-btn">Register</button>
    </div>
  `;

  // Refined binding: attach listeners directly
  card.querySelector(".view-btn").addEventListener("click", () => viewDetails(event));
  card.querySelector(".register-btn").addEventListener("click", () => register(event));

  return card;
}

function renderEvents(events) {
  const grid = document.getElementById("eventsGrid");
  grid.innerHTML = "";
  events.forEach(ev => grid.appendChild(renderEventCard(ev)));
}

function viewDetails(event) {
  console.log("Viewing:", event);
}
function register(event) {
  console.log("Registering:", event);
}

renderEvents(events);
</script>

function EventCard({ event, onView, onRegister }) {
  return (
    <article className="event-card">
      <h3>{event.name}</h3>
      <p>ğŸ“… {new Date(event.date).toLocaleDateString()}</p>
      <p>ğŸ“ {event.location}</p>
      <div className="event-actions">
        <button onClick={() => onView(event)}>View Details</button>
        <button onClick={() => onRegister(event)}>Register</button>
      </div>
    </article>
  );
}

